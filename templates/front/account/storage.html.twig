{% extends '@front/front.html.twig' %}

{% block description 'meta.description.account'|trans({'%user%': app.user.username})|capitalize %}
{% block title 'ui.account'|trans|capitalize %}

{% block body %}
    {% include '@front/account/_menu.html.twig' %}

    <section class="container mt2">
        <div class="account-storage">
            <div class="account-storage_info card flash-info"></div>
            <div class="account-storage_content card">
                <div class="text-right">
                    {{ '~' ~ totalSizeStorage|ea_filesize }} utilis√©s sur {{ 5368709120|ea_filesize }}
                </div>

                <progress max="5368709120" value="{{ totalSizeStorage }}"></progress>

                <ol class="flex mt2">
                    <li>
                        <a href="{{ path('account.storage', {'slug': app.user}) }}">/{{ 'ui.storage'|trans }}</a>
                    </li>
                    {% for p in path %}
                        <li>
                            {% if not loop.last %}
                                <a href="{{ path('account.storage', {'slug': app.user.slug, 'folder': p.slug}) }}">
                                    /{{ p.title }}
                                </a>
                            {% else %}
                                <span>/{{ p.title }}</span>
                            {% endif %}
                        </li>
                    {% endfor %}
                </ol>

                <table class="d-table">
                    <thead>
                        <tr>
                            <th>Titre</th>
                            <th>Taille</th>
                            <th>Options</th>
                        </tr>
                    </thead>
                    {% for storage in storages %}
                        <tr>
                            <td>
                                <a download href="{{ asset(vich_uploader_asset(storage)) }}" class="link-line">
                                    {{ storage.originalName }}
                                </a>
                            </td>
                            <td>{{ storage.size|ea_filesize }}</td>
                            <td></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="account-storage_form card">
                {{ form_start(formStorage) }}
                <button type="submit" class="btn-primary">{{ 'ui.download_item'|trans|capitalize }}</button>
                {{ form_widget(formStorage.imageFile) }}
                <span class="color-danger">{{ form_errors(formStorage.imageFile) }}</span>
                {{ form_end(formStorage) }}
                <hr class="mb1">
                {{ form_start(formNewFolder) }}
                <div class="form-group">
                    <label>{{ 'ui.create-folder'|trans|capitalize }}</label>
                    {% for p in path %}
                        {{ form_widget(formNewFolder.title, {
                            'attr': {
                                'placeholder': 'ui.create-folder-placeholder'|trans({'%path%': p.title})|capitalize
                            }}) }}
                    {% else %}
                        {{ form_widget(formNewFolder.title, {
                            'attr': {
                                'placeholder': 'ui.create-folder-placeholder'|trans({'%path%': 'archives'})|capitalize
                            }}) }}
                    {% endfor %}
                    <div class="color-danger">
                        {{ form_errors(formNewFolder.title) }}
                    </div>
                </div>
                {{ form_end(formNewFolder) }}
                {{ folderHierarchy|raw }}
            </div>
        </div>
    </section>

{% endblock %}