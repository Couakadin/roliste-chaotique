{% extends '@front/front.html.twig' %}

{% block description 'meta.description.contact'|trans %}
{% block title 'ui.contact'|trans|capitalize %}

{% block body %}
    <div class="container mt2">
        <h1 class="h1 mb2">{{ 'ui.contact'|trans|capitalize }}</h1>
        <div class="card dark">
            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                <div class="color-danger">
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.subject) }}
                {{ form_widget(form.subject) }}
                <div class="color-danger">
                    {{ form_errors(form.subject) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.message) }}
                {{ form_widget(form.message) }}
                <div class="color-danger">
                    {{ form_errors(form.message) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.keySentence) }}
                <div class="form-container">
                    {{ form_widget(form.keySentence) }}
                    <i data-tooltip="{{ ('tooltip.key_sentence'|trans({'%key%' : 'rÃ©ussite critique'})|capitalize)|raw }}">
                        <img src="{{ asset('/build/front/tools/info_potion.svg') }}" alt="{{ 'tooltip.tooltip'|trans }}"
                             width="20" height="20">
                    </i>
                </div>
                <div class="color-danger">
                    {{ form_errors(form.keySentence) }}
                </div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn-secondary">{{ 'ui.send'|trans|capitalize }}</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
