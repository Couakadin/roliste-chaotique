            <p class="card_body">{{ ('privacy_policy.data_breach.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.changes_and_amendments.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.changes_and_amendments.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.acceptance_of_this_policy.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.acceptance_of_this_policy.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.contacting_us.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.contacting_us.body'|trans)|raw }}</p>
            <p class="card_body">{{ ('privacy_policy.updated_at'|trans({'%updatedAt%': '2022-02-03'|format_datetime('long', 'none')}))|raw }}</p>
        </div>
        <a href="{{ path('home.index') }}" class="btn-primary mt2">{{ 'ui.go_back'|trans }}</a>
    </div>
{% endblock %}