            <h2 class="card_title h2">{{ 'privacy_policy.collection_of_personal_information.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.collection_of_personal_information.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.privacy_of_children.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.privacy_of_children.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.use_and_processing_of_collected_information.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.use_and_processing_of_collected_information.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.managing_information.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.managing_information.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.disclosure_of_information.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.disclosure_of_information.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.retention_of_information.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.retention_of_information.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.cookies.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.cookies.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.do_not_track_signals.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.do_not_track_signals.body'|trans)|raw }}</p>
            <h2 class="card_title h2">{{ 'privacy_policy.links_to_other_resources.title'|trans|capitalize }}</h2>
            <p class="card_body">{{ ('privacy_policy.links_to_other_resources.body'|trans)|raw }}</p>
